/** 
 * @file EEPROMAnything.h Library for reading and writing any kind of variable in EEPROM
 * Source code from : http://playground.arduino.cc/Code/EEPROMWriteAnything and http://forum.arduino.cc/index.php?topic=239629.0
 * @date 31/12/2015
 */

#include <EEPROM.h>
#include <Arduino.h>  // for type definitions

template <class T> int EEPROM_writeAnything(int ee, const T& value)
{
    const byte* p = (const byte*)(const void*)&value;
    unsigned int i;
    for (i = 0; i < sizeof(value); i++) {
		// Slightly modify EEPROM_writeAnything to minimise write cycles: http://forum.arduino.cc/index.php?topic=239629.0
	    const byte b = *p;
  		if( eeprom_read_byte( ( uint8_t* ) ee ) != b )
		    eeprom_write_byte( ( uint8_t* ) ee++, b ), ++p;
		else
    		ee++, p++;
	}
    return i;
}

template <class T> int EEPROM_readAnything(int ee, T& value)
{
    byte* p = (byte*)(void*)&value;
    unsigned int i;
    for (i = 0; i < sizeof(value); i++)
	  *p++ = EEPROM.read(ee++);
    return i;
}
